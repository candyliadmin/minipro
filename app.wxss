.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.wrap-line {
  border-bottom: 3rpx solid #2b2b2b;
  margin: 0 30rpx;
  overflow: hidden;
}

.down-arrow {
  display: inline-block;
  /* margin-top: -24rpx; */
}

.down-arrow:after {
  content: " ";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 0 4rpx 4rpx 0;
  border-color: #c8c8cd;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  /* top: -4rpx; */
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  margin-left: 8rpx;
  /* right: 4rpx; */
}

.select-bar-style {
  font-size: 32rpx;
  text-align: center;
}

