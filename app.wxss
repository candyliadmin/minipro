/**自定义tabbar样式 start**/
.tab-bar {
  background-color: #fff;
  position: fixed;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  justify-items: center;
  align-items: flex-end;
  padding-bottom: 20rpx;
}

.menu-item {
  text-align: center;
  padding: 14rpx 20rpx 10rpx 20rpx;
  font-size: 20rpx;
  flex: 3;
}
.menu-item-active{
  background-color: transparent;
}
.menu-item2 {
  text-align: center;
  color: #3E7EE2;
  font-size: 20rpx;
  padding: 12rpx 20rpx 10rpx 20rpx;
  position: relative;
}
.menu-item2.orange{
  color: #E07600;
}

.menu-item2 .img {
  width: 180rpx;
  height: 136rpx;
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  margin-left: -90rpx;
  z-index: -1;
}

.menu-item .img {
  width: 50rpx;
  height: 50rpx;
  display: none;
  margin: auto auto 5rpx auto;
}
.menu-item .img2{
  display: block;
}
.menu-item-active{
  color: #3E7EE2;
}
.menu-item.active .img2,.menu-item-active .img2{
  display: none;
}
.menu-item.active .img1,.menu-item-active .img1{
  display: block;
}
