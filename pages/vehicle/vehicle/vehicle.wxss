.weui-panel:before{
  border-top: none;
}

.passenger-con{
  /* padding: 19rpx; */
  padding-top: 100rpx;
  background-color: #fff;
  box-sizing: border-box;
  position: relative;
  height: calc(100vh - 110rpx);
}
.receipts-bottom{
    position: absolute;
    bottom:0;
    left:0;
    padding: 10rpx 40rpx 30rpx 40rpx;
    width: 100%;
    box-sizing: border-box;
    background: #fff;
    display: flex;
    z-index: 10;
}
.receipts-bottom button{
  width: 100%;
  font-size: 36rpx;
}