page{
  background-color: #fff;
}
.clock-button-wrap{
  margin: 40rpx 0;
  display: flex;
  justify-content: center;
}
.clock-button-border{
  width: 232rpx;
  height: 232rpx;
  position: absolute;
  background: rgba(62, 126, 226, 0.2);
  border-radius: 100%;
  z-index: 0;
}
.clock-button-border.w-80{
  width: 258rpx;
  height: 258rpx;
  background: rgba(62, 126, 226, 0.1);
}
.clock-button-content{
  position: relative;
  z-index: 1;
  width: 100%;
  height: 100%;
  display: flex;
  border-radius: 100%;
  background:linear-gradient(180deg,rgba(92,155,254,1) 0%,rgba(103,163,255,1) 60%,rgba(76,140,241,1) 100%);
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #B7D3FF;
  font-size: 30rpx;
  box-shadow:0px 0px 2px 0px rgba(103,163,255,1);
}
.clock-button{
  width: 232rpx;
  height: 232rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.clock-button .clock-button-text{
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}
.clock-button .clock-button-time{
  height: 48rpx;
}
.clockin-btn{
  width: 340rpx;
  height: 88rpx;
  background:linear-gradient(171deg,rgba(0, 151, 255, 1) 0%,rgba(62, 126, 226, 1) 100%);
  font-size: 46rpx;
  text-align: center;
  line-height: 88rpx;
  color: #fff;
  border-radius:44rpx;
  border:2rpx solid rgba(221,221,221,1)
}
.clock-item{
  position: relative;
  min-height: 280rpx;
}
.clock-item::after{
  content: '';
  width: 2rpx;
  height: 100%;
  background-color: #CCCCCC;
  position: absolute;
  left: 8rpx;
  top: 15rpx;
}
.clock-item:last-of-type::after{
  background-color: transparent;
}
.clock-item.active .clock-item-title::before{
  background-color: #3B78D6;
}
.clock-item-title{
  font-size: 28rpx;
  color: #666;
}
.clock-item-title::before{
  content: '';
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  border-radius: 100%;
  background-color: #CCCCCC;
  margin-right: 30rpx;
  position: relative;
  z-index: 1;
}
.clock-item-con{
  padding-left: 44rpx;
}
.modal-image{
  width: 100%;
}
.modal-head{
  color: #3E7EE2;
  font-size: 80rpx;
  font-weight: bold;
  line-height: 1;
  padding-bottom: 15rpx;
}
.clock-history-title{
  font-size: 36rpx;
  color: #000;
  margin: 15rpx 0;
}
.line-item{
  padding: 30rpx 40rpx 40rpx;
}

.clock-lable{
  color: #666;
  font-size: 28rpx;
  width: 150rpx;
}
.time-title{
  font-size: 156rpx;
  padding-bottom: 60rpx;
  font-weight: bold;
}
.line-item-title .bdicon{
  margin-right: 15rpx;
}