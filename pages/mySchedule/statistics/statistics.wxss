
.schedule-title{
  padding: 0 40rpx;
  font-size: 28rpx;
  background-color: #fff;
}
.schedule-title>view{
  padding: 22rpx 0;
}
.date-opt-btn{
  font-size: 34rpx;
  color: #3E7EE2;
  padding: 0 32rpx;
}
.date-opt-btn.disabled{
  color: #999999;
}
.select-box{
  padding-right: 50rpx;
}
.select-box::after{
  top: 5rpx;
}
.statistic-con{
  padding: 26rpx;
}
.statistic-num{
  margin: 20rpx 0;
  background-color: #fff;
  padding: 60rpx;
}
.statistic-item{
  text-align: center;
  font-size: 34rpx;
  position: relative;
  width: 50%;
  line-height: 1;
}
.statistic-item.bordered .statistic-type::after{
  content: '';
  position: absolute;
  height: 100%;
  border-right: 1rpx solid #DDDDDD;
  right: 0;
}
.statistic-item image{
  width: 81rpx;
  height: 88rpx;
}
.statistic-type{
  color: #FF8300;
  display: inline-block;
  font-size: 56rpx;
  margin-bottom: 20rpx;
}
.fix-code{
  width: 120rpx;
  height: 120rpx;
  position: fixed;
  right: 12rpx;
  bottom: 120rpx;
  z-index: 99;
}
.fix-code-active{
  background-color: transparent;
}
.fix-code image{
  width: 100%;
  height: 100%;
}
.line-item-wrap .line-row{
  margin-bottom: 8rpx;
}
.line-item-wrap .line-item-title{
  font-size: 32rpx;
}