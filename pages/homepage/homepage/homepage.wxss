@import '../../../lib/style/icon.wxss';
@import '../../../lib/style/weui.wxss';
@import '../../../lib/style/main.wxss';

.index-block{
  padding: 40rpx;
}
.index-block.no-w-padding{
  padding: 40rpx 0;
}
.index-block.no-w-padding .index-block-title{
  padding: 0 40rpx;
}
.index-userinfo{
  display: flex;
  background: linear-gradient(45deg, #3C7FE8 , #609EFF);
  padding: 60rpx;
  border-radius: 21rpx;
  box-shadow:0px 2px 10px 0px rgba(62,126,226,0.56);
  color: #fff;
  position: relative;
}
.index-userinfo::before{
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  background: url('https://static.badiyun.com/wxapp-agencies/image/ui1-4/index-userinfo-bg.png') no-repeat center bottom;
  left: 0;
  bottom: 0;
  z-index: 0;
  border-radius: 21rpx;
}
.user-avatar{
  width: 114rpx;
  height: 114rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx solid #88B6FF;
  position: relative;
  z-index: 1;
  background-color: rgba(255,255,255,0.6);
}
.user-infors{
  padding-left: 34rpx;
  padding-top: 11rpx;
  position: relative;
  z-index: 1;
}
.user-infors .bay-btn{
  background-color: rgba(255,255,255,0.6);
  border-radius: 23rpx;
  color: #3E7EE2;
  border: 1rpx solid #fff;
  margin-top: 30rpx;
}
.index-block-title{
  font-size: 30rpx;
  color: #000;
  margin-bottom: 40rpx;
}
.data-panel{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.data-panel-item{
  width: calc(50% - 9rpx);
  padding: 60rpx 0;
  border-radius: 14rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin:9rpx 0;
  position: relative;
}
.data-panel-item.shadow{
  box-shadow: 0 2rpx 40rpx rgba(0, 0, 0, 0.1);
}
.data-panel-item:nth-child(odd){
  margin-right: 9rpx;
}
.data-panel-item:nth-child(even){
  margin-left: 9rpx;
}
.data-panel-bg{
  position: absolute;
  z-index: 0;
  opacity: 0.08;
  font-size: 130rpx;
  bottom: 0;
  line-height: 1;
}
.index-account{
  height: 320rpx;
  background: url("https://static.badiyun.com/wxapp-agencies/image/ui1-4/index-account-bg.png") no-repeat center bottom;
  background-size: auto 80%;
}
.index-account-title{
  font-size: 60rpx;
  line-height: 1.2;
}
.schedule-panel{
  padding: 0 25rpx;
  min-height: 450rpx;
}
.nodata{
  background: url('https://static.badiyun.com/wxapp-agencies/image/ui1-4/index-nodata.png') center center no-repeat;
  background-size: 176rpx 120rpx;
}