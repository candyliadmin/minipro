/* pages/search/search.wxss */
page{
  min-height: 100%;
  background-color: #fff;
}
.search-container{
  padding: 120rpx 0 0 0;
}
.search-header{
    position: fixed;
    top: 0;
    width: calc(100% - 62.5rpx);
    height: 91rpx;
    display: flex;
    background: #fff;
    border-top: 10rpx solid #f2f2f2;
    border-bottom: 10rpx solid #f2f2f2;
    padding: 0 31.25rpx;
    font-size: 28rpx;
    color: #333;
}

.search-header .input-box{
    position: relative;
    margin-top: 16rpx;
    float: left;
    width: 0;
    flex: 1;
    height: 59rpx;
    line-height: 59rpx;
    padding: 0 20rpx;
    background: #f2f2f2;
    border-radius: 30rpx;
}

.search-header .icon{
    position: absolute;
    font-size: 40rpx;
    left: 20rpx;
    width: 31rpx;
    height: 31rpx;
}

.search-header .del{
    position: absolute;
    top: 3rpx;
    right: 10rpx;
    z-index: 10;
    height: 30rpx;
    padding: 12rpx;
}

.search-header .keywrod{
    position: absolute;
    top: 0;
    left: 40rpx;
    width: 506rpx;
    height: 59rpx;
    padding-left: 30rpx;
}

.search-header .right{
    margin-top: 24rpx;
    margin-left: 31rpx;
    margin-right: 6rpx;
    width: 58rpx;
    height: 43rpx;
    line-height: 43rpx;
    float: right;
}

.no-search{
    height: auto;
    overflow: hidden;
    margin-top: 91rpx;
}
.search-result-empty{
    width: 100%;
    height: 100%;
    padding-top: 300rpx;
}

.search-result-empty .icon{
    margin: 0 auto;
    display: block;
    width: 240rpx;
    height: 240rpx;
}

.search-result-empty .text{
    display: block;
    width: 100%;
    height: 40rpx;
    font-size: 28rpx;
    text-align: center;
    color: #999;
}
.search-list{
  padding: 0 32rpx;
}
.search-item{
  padding: 22rpx 0;
  border-bottom: 1px dashed #999;
  color: #666666;
  display: flex;
}
.search-item .bdicon{
  padding-right: 10rpx;
}
.search-list .search-item:last-of-type{
  border-bottom: none;
}